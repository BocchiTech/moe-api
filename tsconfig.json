{
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "useUnknownInCatchVariables": true
    }
  },
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": true,
    "declaration": true,
    "declarationDir": "./dist/@types",
    "isolatedModules": true,
    "outDir": "./dist/esm"
  },
  "include": ["src/**/*"]
}